<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textNameGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:width="340dp"
        android:height="80dp"
        android:background="#00AC5454"
        android:gravity="center"
        android:text="OXGame"
        android:textColor="@color/color_text1"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSettings1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:width="150dp"
        android:height="40dp"
        android:text="Board size"
        android:textColor="@color/color_text1"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameGame" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSettings1">

        <Button
            android:id="@+id/buttonSettings1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="2"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings1.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="3"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings1.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="4"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="5"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings1.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="6"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings1.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="7"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textSettings2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:width="150dp"
        android:height="40dp"
        android:text="Win Line size"
        android:textColor="@color/color_text1"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSettings2">

        <Button
            android:id="@+id/buttonSettings2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="2"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings2.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="3"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings2.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="4"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="5"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings2.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="6"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSettings2.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:backgroundTint="@color/colorButtonMenu"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="7"
            android:textColor="@color/colorButtonMenuText"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:width="170dp"
        android:height="40dp"
        android:backgroundTint="@color/colorButtonMenu"
        android:text="Start"
        android:textColor="@color/colorButtonMenuText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textStartError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:width="230dp"
        android:height="60dp"
        android:textColor="@color/color_text1"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStart" />
</androidx.constraintlayout.widget.ConstraintLayout>